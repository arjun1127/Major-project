<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2"> 
        
            <h3>Edit your listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data"
                novalidate class="needs-validation"> <!-- class="needs-validation" novalidate -->
                <div class="mb-3">
                    <label for="title"class="form-lable">Update Title</label>
        
                    <input name="listing[title]" value="<%=listing.title%>"class="form-control" required>
                    <div class="valid-feedback">Title looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="description"class="form-lable">Change Description</label>
        
                    <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please enter description</div>

                </div>
                <div class="mb-3">
                   Orginal Listing Image
                    <hr>
                   <img src="<%=originalImageUrl%>"> 
                   <hr>
                    </div>
                <div class="mb-3">
                    <label for="image"class="form-lable">Update Image </label>
                    <input name="listing[image]" 
                    type="file"
                    class="form-control" 
                    >
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price"class="form-lable">Edit Price</label>
            
                        <input name="listing[price]" value="<%=listing.price%>"type="number" class="form-control" required>
                        <div class="invalid-feedback">Please enter Valid Price</div>

                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country"class="form-lable">Edit Country</label>
            
                        <input name="listing[country]"value="<%=listing.country%>"class="form-control" required> 
                        <div class="invalid-feedback">Country does not Exist </div>

                    </div>
            
                </div>
                
                        <div class="mb-3">
                    <label for="location"class="form-lable">Edit Location</label>
        
                    <input name="listing[location]" value="<%=listing.location%>"class="form-control" required>
                    <div class="invalid-feedback">Location not valid</div>

                </div>
                <br><br>
                <button class="btn btn-dark edit-btn mt-3">EDIT</button>
                <br><br>
            </form>            
    </div>
</div>

